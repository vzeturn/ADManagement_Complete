<UserControl x:Class="ADManagement.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource Card}">
                <TextBlock Text="Settings" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBrush}"/>
            </Border>

            <!-- Settings Content -->
            <StackPanel Grid.Row="1" Margin="0,8">
                <!-- Active Directory Configuration -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Active Directory Configuration" 
                                   FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                        <!-- Domain -->
                        <TextBlock Text="Domain" FontWeight="Medium" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Domain, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"/>

                        <!-- LDAP Server -->
                        <TextBlock Text="LDAP Server (optional)" FontWeight="Medium" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding LdapServer, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Port" FontWeight="Medium" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Timeout (seconds)" FontWeight="Medium" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Page Size -->
                        <TextBlock Text="Page Size" FontWeight="Medium" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"/>

                        <!-- Use SSL -->
                        <CheckBox Content="Use SSL/TLS (LDAPS)" 
                                  IsChecked="{Binding UseSSL}"
                                  Margin="0,0,0,16"/>

                        <!-- Connection Status -->
                        <Border Background="#E8F5E9" Padding="12" CornerRadius="4" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Connection Status:" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding ConnectionStatus}" FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <Button Content="Test Connection" 
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding TestConnectionCommand}"
                                Height="36" Width="150"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Export Configuration -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Export Configuration" 
                                   FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                        <!-- Export Directory -->
                        <TextBlock Text="Export Directory" FontWeight="Medium" Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Text="{Binding ExportDirectory, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                            
                            <Button Grid.Column="1" Content="Browse..." 
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding BrowseExportDirectoryCommand}"
                                    Margin="8,0,0,0" Height="36" Width="100"/>
                        </Grid>

                        <!-- Export Options -->
                        <TextBlock Text="Export Options" FontWeight="Bold" Margin="0,0,0,8"/>
                        <CheckBox Content="Include disabled accounts" 
                                  IsChecked="{Binding IncludeDisabledAccounts}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Auto-fit columns" 
                                  IsChecked="{Binding AutoFitColumns}"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Apply formatting" 
                                  IsChecked="{Binding ApplyFormatting}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Style="{StaticResource Card}">
                <Grid>
                    <WrapPanel>
                        <Button Content="ðŸ’¾ Save Configuration" 
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding SaveConfigurationCommand}"
                                Margin="0,0,8,0" Height="36" Width="180"/>
                        
                        <Button Content="ðŸ”„ Reset to Defaults" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding ResetToDefaultsCommand}"
                                Margin="0,0,8,0" Height="36" Width="150"/>
                        
                        <Button Content="ðŸ“‹ View Logs" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding ViewLogsCommand}"
                                Height="36" Width="120"/>
                    </WrapPanel>

                    <Border Background="#F0F0F0" Padding="8" CornerRadius="4"
                            HorizontalAlignment="Right">
                        <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
