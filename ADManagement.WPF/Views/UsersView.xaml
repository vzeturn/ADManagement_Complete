<UserControl x:Class="ADManagement.WPF.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Account Status Converter -->
        <Style x:Key="AccountStatusStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                    <Setter Property="Text" Value="✅ Enabled"/>
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                    <Setter Property="Text" Value="⛔ Disabled"/>
                    <Setter Property="Foreground" Value="#F44336"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Locked Status Style -->
        <Style x:Key="LockedStatusStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLocked}" Value="True">
                    <Setter Property="Text" Value="🔒 Locked"/>
                    <Setter Property="Foreground" Value="#FF9800"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsLocked}" Value="False">
                    <Setter Property="Text" Value=""/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="👥 User Management" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage Active Directory users" FontSize="12" Foreground="White" Opacity="0.9"/>
                </StackPanel>

                <Button Grid.Column="1" Content="🔄 Refresh" 
                       Command="{Binding LoadUsersCommand}"
                       Style="{StaticResource SecondaryButton}"
                       Width="100" Height="32"/>
            </Grid>
        </Border>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1" Background="White" Padding="16" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0" Margin="0,0,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Padding="10" Height="36" VerticalContentAlignment="Center"
                            BorderBrush="#CCCCCC" BorderThickness="1">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchUsersCommand}"/>
                        </TextBox.InputBindings>
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="🔍 Search users by name, username, or email..." 
                                                                  Foreground="#999999" 
                                                                  Margin="10,0,0,0"
                                                                  VerticalAlignment="Center"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button Grid.Column="1" Content="🔍" Width="36" Height="36" 
                           Margin="4,0,0,0"
                           Command="{Binding SearchUsersCommand}"
                           Style="{StaticResource PrimaryButton}"/>
                </Grid>

                <!-- Include Disabled Accounts Checkbox -->
                <CheckBox Grid.Column="1" 
                         Content="Include disabled accounts"
                         IsChecked="{Binding IncludeDisabledAccounts}"
                         VerticalAlignment="Center"
                         Margin="0,0,16,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="2" Background="White" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Users DataGrid -->
                <DataGrid Grid.Row="0" 
                         ItemsSource="{Binding Users}"
                         SelectedItem="{Binding SelectedUser}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F9F9F9"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         RowHeight="40"
                         ColumnHeaderHeight="44">

                    <!-- Double-click handler -->
                    <DataGrid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" 
                                     Command="{Binding OpenUserDetailCommand}"/>
                    </DataGrid.InputBindings>

                    <!-- Context Menu -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="📋 View Details" 
                                     Command="{Binding OpenUserDetailCommand}"/>
                            <Separator/>
                            <MenuItem Header="✓ Enable User" 
                                     Command="{Binding EnableUserCommand}"/>
                            <MenuItem Header="✗ Disable User" 
                                     Command="{Binding DisableUserCommand}"/>
                            <MenuItem Header="🔓 Unlock User" 
                                     Command="{Binding UnlockUserCommand}"/>
                            <Separator/>
                            <MenuItem Header="🔄 Refresh" 
                                     Command="{Binding LoadUsersCommand}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>
                        <!-- Display Name -->
                        <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" 
                                          Width="200" FontWeight="SemiBold"/>

                        <!-- Username -->
                        <DataGridTextColumn Header="Username" Binding="{Binding SamAccountName}" 
                                          Width="150"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" 
                                          Width="220"/>

                        <!-- Department -->
                        <DataGridTextColumn Header="Department" Binding="{Binding Department}" 
                                          Width="150"/>

                        <!-- Title -->
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" 
                                          Width="180"/>

                        <!-- Account Status -->
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource AccountStatusStyle}" 
                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Locked Status -->
                        <DataGridTemplateColumn Header="Locked" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource LockedStatusStyle}" 
                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Last Logon -->
                        <DataGridTextColumn Header="Last Logon" 
                                          Binding="{Binding LastLogon, StringFormat='yyyy-MM-dd HH:mm'}" 
                                          Width="140"/>
                    </DataGrid.Columns>

                    <!-- Row Style for highlighting -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                    <Setter Property="Foreground" Value="#999999"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>

                <!-- Action Buttons -->
                <WrapPanel Grid.Row="1" Margin="0,16,0,8" HorizontalAlignment="Left">
                    <Button Content="➕ Create User" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding CreateUserCommand}"
                            Margin="0,0,8,0" Height="36" Width="130"/>

                    <Button Content="✓ Enable User" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding EnableUserCommand}"
                            Margin="0,0,8,0" Height="36" Width="130"/>

                    <Button Content="✗ Disable User" 
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding DisableUserCommand}"
                            Margin="0,0,8,0" Height="36" Width="130"/>

                    <Button Content="🔓 Unlock User" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding UnlockUserCommand}"
                            Margin="0,0,8,0" Height="36" Width="130"/>

                    <Button Content="📋 View Details" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding OpenUserDetailCommand}"
                            Height="36" Width="130"/>
                </WrapPanel>

                <!-- Status Bar -->
                <Border Grid.Row="2" Background="#F0F0F0" Padding="8" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="💡 Double-click or press Enter to view user details" 
                                  FontSize="12" Opacity="0.6"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#C0FFFFFF" 
               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" Padding="32,24" CornerRadius="8"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="⏳ Loading..." FontSize="16" FontWeight="Bold" 
                              HorizontalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Please wait..." FontSize="12" 
                              Foreground="#666666" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
