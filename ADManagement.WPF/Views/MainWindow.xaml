<Window x:Class="ADManagement.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ADManagement.WPF.ViewModels"
        xmlns:views="clr-namespace:ADManagement.WPF.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- DataTemplate for UsersViewModel -->
            <DataTemplate DataType="{x:Type vm:UsersViewModel}">
                <views:UsersView/>
            </DataTemplate>

            <!-- DataTemplate for GroupsViewModel -->
            <DataTemplate DataType="{x:Type vm:GroupsViewModel}">
                <views:GroupsView/>
            </DataTemplate>

            <!-- DataTemplate for ExportViewModel -->
            <DataTemplate DataType="{x:Type vm:ExportViewModel}">
                <views:ExportView/>
            </DataTemplate>

            <!-- DataTemplate for SettingsViewModel -->
            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- App Title -->
                <Border Background="{StaticResource PrimaryBrush}" Padding="16,24">
                    <StackPanel>
                        <TextBlock Text="AD Management" FontSize="20" FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="System" FontSize="16" 
                                   Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Margin="0,16,0,0">
                    <Button Height="48" Margin="8,0"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding NavigateToUsersCommand}"
                            HorizontalContentAlignment="Left" Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource IconUsers}" Width="20" Height="20"/>
                            <TextBlock Text="Users" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Height="48" Margin="8,8,8,0"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding NavigateToGroupsCommand}"
                            HorizontalContentAlignment="Left" Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource IconGroups}" Width="20" Height="20"/>
                            <TextBlock Text="Groups" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Height="48" Margin="8,8,8,0"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding NavigateToExportCommand}"
                            HorizontalContentAlignment="Left" Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource IconExport}" Width="20" Height="20"/>
                            <TextBlock Text="Export" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Height="48" Margin="8,8,8,0"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding NavigateToSettingsCommand}"
                            HorizontalContentAlignment="Left" Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource IconSettings}" Width="20" Height="20"/>
                            <TextBlock Text="Settings" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Separator Margin="8,16"/>
                    
                    <Button Height="48" Margin="8,8,8,0"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding ShowAboutCommand}"
                            HorizontalContentAlignment="Left" Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource IconAbout}" Width="20" Height="20"/>
                            <TextBlock Text="About" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="16">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>
    </Grid>
</Window>
