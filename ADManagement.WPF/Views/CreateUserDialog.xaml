<Window x:Class="ADManagement.WPF.Views.CreateUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New User" Height="600" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Create New Active Directory User" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Required Fields -->
                <GroupBox Header="Required Information" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <TextBlock Text="Username*" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Username}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="First Name*" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding FirstName}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Last Name*" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding LastName}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Password*" Margin="0,0,0,4"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Confirm Password*" Margin="0,0,0,4"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,8" Height="28"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Optional Fields -->
                <GroupBox Header="Optional Information" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <TextBlock Text="Display Name" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding DisplayName}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Email" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Email}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Department" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Department}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Title" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Title}" Margin="0,0,0,8" Height="28"/>
                        
                        <TextBlock Text="Phone Number" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding PhoneNumber}" Margin="0,0,0,8" Height="28"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Account Options -->
                <GroupBox Header="Account Options" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <CheckBox Content="Account Enabled" IsChecked="{Binding AccountEnabled}" Margin="0,0,0,4"/>
                        <CheckBox Content="User must change password at next logon" IsChecked="{Binding MustChangePasswordOnNextLogon}" Margin="0,0,0,4"/>
                        <CheckBox Content="Password never expires" IsChecked="{Binding PasswordNeverExpires}" Margin="0,0,0,4"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status and Buttons -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="{Binding StatusMessage}" 
                       Foreground="{Binding StatusColor}" Margin="0,0,0,8"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Create" Command="{Binding CreateUserCommand}" 
                        Width="100" Height="32" Margin="0,0,8,0" IsDefault="True"/>
                <Button Content="Cancel" Click="CancelButton_Click" 
                        Width="100" Height="32" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

