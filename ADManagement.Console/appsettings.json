{
  "ADConfiguration": {
    "Domain": "corp.example.com",
    "LdapServer": "dc01.corp.example.com",
    "Username": "",
    "Password": "",
    "Port": 389,
    "UseSSL": false,
    "TimeoutSeconds": 30,
    "PageSize": 1000,
    "DefaultSearchOU": "OU=Users,DC=corp,DC=example,DC=com",
    "_comment_optimization": "✨ NEW: Performance optimization settings",
    "ConnectionPoolSize": 10,
    "MaxConcurrentOperations": 10,
    "SearchCacheSeconds": 300,
    "BatchSize": 100,
    "MaxParallelDegree": 4
  },
  "ExportConfiguration": {
    "DefaultPath": "C:\\Exports",
    "AutoFitColumns": false,
    "CreateTable": true,
    "IncludeDisabledAccounts": false,
    "_comment_optimization": "✨ NEW: Export optimization settings",
    "EnableStreaming": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "ADManagement.Infrastructure": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/admanagement-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}